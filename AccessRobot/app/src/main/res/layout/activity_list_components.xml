<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="148dp"
    android:paddingLeft="48dp"
    android:paddingRight="48dp"
    android:paddingTop="148dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/tv_parts_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/parts_instructions"
            android:textSize="26sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mozi_frame"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/iv_hotspots"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/mozi_parts_hotspots"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_mozi"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/mozi_parts" />

    </FrameLayout>

</LinearLayout>

