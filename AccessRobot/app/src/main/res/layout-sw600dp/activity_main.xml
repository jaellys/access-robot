<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_parts"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:scaleType="center"
            app:materialIcon="settings"
            app:materialIconColor="@color/teal"
            app:materialIconSize="95dp" />

        <TextView
            android:id="@+id/tv_parts"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_parts"
            android:layout_marginBottom="48dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:text="Parts"
            android:textColor="@color/gray_dark"
            android:textSize="24sp" />

        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_build"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_toRightOf="@+id/btn_parts"
            android:scaleType="center"
            app:materialIcon="desktop_tower"
            app:materialIconColor="@color/teal"
            app:materialIconSize="95dp" />

        <TextView
            android:id="@+id/tv_build"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_build"
            android:layout_marginBottom="48dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_toRightOf="@+id/btn_parts"
            android:gravity="center"
            android:text="Build"
            android:textColor="@color/gray_dark"
            android:textSize="24sp" />

        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_learn"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@+id/tv_parts"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:scaleType="center"
            app:materialIcon="book_open"
            app:materialIconColor="@color/teal"
            app:materialIconSize="95dp" />

        <TextView
            android:id="@+id/tv_learn"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_learn"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:text="Learn"
            android:textColor="@color/gray_dark"
            android:textSize="24sp" />

        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_program"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@+id/tv_build"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_toRightOf="@+id/btn_learn"
            android:scaleType="center"
            app:materialIcon="database"
            app:materialIconColor="@color/teal"
            app:materialIconSize="95dp" />

        <TextView
            android:id="@+id/tv_program"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_program"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_toRightOf="@+id/btn_learn"
            android:gravity="center"
            android:text="Program"
            android:textColor="@color/gray_dark"
            android:textSize="24sp" />

    </RelativeLayout>

</LinearLayout>
