<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ksmaragh.c4q.nyc.accessrobot">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Mozi"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BluetoothActivity"
            android:label=""
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
            android:windowSoftInputMode="stateAlwaysVisible" />
        <activity
            android:name=".BuildActivity"
            android:label="@string/title_activity_build"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CodeActivity"
            android:label="@string/title_activity_code"
            android:screenOrientation="portrait" />

        <activity
            android:name=".DeviceListActivity"
            android:label="Device List" />

        <activity
            android:name=".LearnActivity"
            android:label="@string/title_activity_learn"
            android:screenOrientation="portrait" />

        <activity
            android:name=".MainActivity"
            android:label="Mozi"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PartsActivity"
            android:label="@string/title_activity_parts"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" />

    </application>

</manifest>
